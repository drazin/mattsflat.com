---
import ScrollReveal from './ScrollReveal.tsx';
import WaitlistForm from './WaitlistForm.tsx';
---

<section id="waitlist" class="px-6 py-20 md:px-12 lg:px-24 lg:py-32 bg-coral/10">
  <div class="max-w-3xl mx-auto text-center">
    <ScrollReveal client:visible>
      <h2 class="font-[var(--font-display)] font-extrabold text-4xl md:text-6xl text-charcoal mb-4">
        Join the Flat Side.
      </h2>

      <p class="text-lg md:text-xl text-charcoal/70 mb-10">
        Sign up and be first to know when Matt's Flat drops.
      </p>
    </ScrollReveal>

    <WaitlistForm client:visible />
  </div>
</section>
